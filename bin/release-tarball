#!/usr/bin/env bash

set -e

USAGE="USAGE: ${0} hledger-flow-executable"

if [ $# != 1 ]
then
    >&2 echo $USAGE
    exit 1
fi

EXECUTABLE=${1}
if [ ! -f ${EXECUTABLE} ]
then
    >&2 echo "File does not exist: ${EXECUTABLE}"
    exit 1
fi

BASEDIR="$(pwd)"

if [ -z ${STACK_YAML} ]
then
    STACK_YAML="${BASEDIR}/stack.yaml"
fi

if [ ! -f ${STACK_YAML} ]
then
    >&2 echo "stack yaml file does not exist: ${STACK_YAML}"
    exit 1
fi
export STACK_YAML

TARGETBASE=${BASEDIR}/releases
mkdir -p ${TARGETBASE}

ABBRHASH="$(git log -1 --format=tformat:%h)"
PACKAGE_VERSION="$(grep '^version:' ${BASEDIR}/package.yaml|awk '{print $2}')"
VERSION="v${PACKAGE_VERSION}"
STACK_RESOLVER="$(grep '^resolver:' ${STACK_YAML}|cut -d' ' -f2)"
GHC_VERSION="$(stack exec -- ghc --version)"
CLI_NAME="$(basename ${EXECUTABLE})"
PLATFORM=`uname -s`
ARCH=`uname -m`

if [ ${PLATFORM} == "Darwin" ]
then
    OS="MacOSX_${PLATFORM}"
else
    OS=${PLATFORM}
fi

VNAME="${CLI_NAME}_${OS}_${ARCH}_${VERSION}_${ABBRHASH}"
TARNAME="${VNAME}.tar.gz"

TARGET=${TARGETBASE}/${VNAME}
rm -rf ${TARGET}
mkdir ${TARGET}
BUILDINFO=${TARGET}/buildinfo.txt
date > ${BUILDINFO}

echo >> ${BUILDINFO}
uname -a >> ${BUILDINFO}
echo -e "\nhledger-flow version: $(${EXECUTABLE} --version)" >> ${BUILDINFO}
echo -e "hledger-flow package.yaml version: ${PACKAGE_VERSION}\n" >> ${BUILDINFO}
echo -e "stack.yaml resolver: ${STACK_RESOLVER}" >> ${BUILDINFO}
echo -e "GHC Version: ${GHC_VERSION}\n" >> ${BUILDINFO}

shasum --algorithm 256 ${EXECUTABLE} >> ${BUILDINFO}
echo >> ${BUILDINFO}
git log -1 >> ${BUILDINFO}

cp ${EXECUTABLE} ${TARGET}
cd ${TARGET}
shasum --algorithm 256 * > sha256-${VNAME}.txt
cd ${TARGETBASE}
tar zcf ${TARNAME} ${VNAME}

echo ${TARNAME}
